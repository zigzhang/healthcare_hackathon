<div class="container">

      <div class="row">

        <div class="col-lg-12">
          <h1 class="page-header">Clinical Studies<small> Overview</small></h1>
        </div>

      </div>

      <div class="row">
				<% @clinical_studies.each do |study| %>
					<div class="col-md-4 portfolio-item">
	          <div class = "map" id="chart_div<%= study.id %>"></div>
	          <h3><a href="/clinical_studies/<%= study.id %>/show"><%= study.name %></a></h3>
						<h4><%= study.description %></h4>
	          <p>Total randomized patients: <%= study.protocoles.count %></p>
	
				    <script type='text/javascript' src='https://www.google.com/jsapi'></script>
				    <script type='text/javascript'>
				     google.load('visualization', '1', {'packages': ['geochart']});
				     google.setOnLoadCallback(drawRegionsMap);

				      function drawRegionsMap() {
				        var data = google.visualization.arrayToDataTable([
				          ['Country', 'Rondomized Patients'],
				          ['United States', <%= study.protocoles.count %>]
				          // ['Brazil', 400],
				          // ['Canada', 500],
				          // ['France', 600],
				          // ['RU', 700]
								
				        ]);

				        var options = {'width':200};

				        var chart = new google.visualization.GeoChart(document.getElementById('chart_div<%= study.id %>'));
				        chart.draw(data, options);
				    };
				    </script>
				
	        </div>
				<% end %>
      </div>


    </div><!-- /.container -->

