<div class="container">

      <div class="row">

        <div class="col-lg-12">
          <h1 class="page-header">Clinical Studies<small> Overview</small></h1>
        </div>
      </div>

      <div class="row">
				<% @clinical_stats.each do |study| %>
					<div class="col-md-4 portfolio-item">
	          <div id="chart_div<%= study[0].id %>" style="width: 80%;"></div>
	          <h3><a href="/clinical_studies/<%= study[0].id %>/show"><%= study[0].name %></a> 
							<% if study[2] == 0 %><span class="label label-success"><%= study[2] %></span><% else %><span class="label label-danger"><%= study[2] %><% end %></h3>
						<h4><%= study[0].description %></h4>
	          <p>Total randomized patients: <%= study[0].protocoles.count %></p>
	
				    <script type='text/javascript' src='https://www.google.com/jsapi'></script>
				    <script type='text/javascript'>
				     google.load('visualization', '1', {'packages': ['geochart']});
				     google.setOnLoadCallback(drawRegionsMap);

				      function drawRegionsMap() {
				        var data = google.visualization.arrayToDataTable(<%= raw study[1].as_json %>);

				        var options = {};

				        var chart = new google.visualization.GeoChart(document.getElementById('chart_div<%= study[0].id %>'));
				        chart.draw(data, options);
				    };
				    </script>
				
	        </div>
				<% end %>
      </div>


    </div><!-- /.container -->

